<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favorite_list_card"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="10dp"
android:elevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_sinav_adi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="e-ALES"
            android:textSize="28sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_sinav_adi"
            android:layout_centerHorizontal="true"
            android:text="Sınava Kalan Gün:"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/txt_kalangun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_sinav_adi"
            android:layout_centerHorizontal="true"
            android:text="80"
            android:textColor="@color/colorOsym"
            android:textSize="95sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView15"
            android:layout_alignRight="@+id/txt_basvuru"
            android:layout_alignLeft="@+id/txt_basvuru"
            android:gravity="center"
            android:layout_below="@+id/txt_kalangun"
            android:text="Başvuru :"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/txt_basvuru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView15"
            android:layout_marginLeft="5dp"
            android:text="06.10.2017\n08.10.2017"
            android:textColor="@color/colorOsym"
            android:textSize="14sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_kalangun"
            android:layout_centerHorizontal="true"
            android:text="Sınav :"
            android:textStyle="normal|bold" />


        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_sonuc"
            android:layout_alignRight="@+id/txt_sonuc"
            android:gravity="center"
            android:layout_below="@+id/txt_kalangun"
            android:text="Sonuç :"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/txt_sonuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_alignBaseline="@+id/txt_sinav_tarihi"
            android:layout_alignBottom="@+id/txt_sinav_tarihi"
            android:layout_alignParentRight="true"
            android:text="06 Kasım 2017\n       10:00"
            android:textColor="@color/colorOsym"
            android:textSize="14sp"
            android:textStyle="normal|bold" />


        <TextView
            android:id="@+id/txt_sinav_tarihi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView15"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="06 Kasım 2017\n       10:00"
            android:textColor="@color/colorOsym"
            android:textSize="14sp"
            android:textStyle="normal|bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:layout_alignTop="@+id/txt_sinav_adi"
            app:srcCompat="@mipmap/favorite" />


    </RelativeLayout>

</android.support.v7.widget.CardView>