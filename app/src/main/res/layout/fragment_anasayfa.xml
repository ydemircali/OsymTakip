<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:id="@+id/fragment_anasayfa"
    tools:context="osymtakip.yakuprnk.com.fragments.Uygulama"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:elevation="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightGray"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            android:layout_marginLeft="10dp"
            android:id="@+id/txtfavori"
            android:text="Yaklaşan Favori Sınavınız"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/favoriline"
            android:layout_below="@+id/txtfavori"
            android:background="@color/colorOsym"/>


    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/favorite_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_sinav_adi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Yaklaşan sınav yok"
                android:textSize="28sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_sinav_adi"
                android:layout_centerHorizontal="true"
                android:text="Sınava Kalan Gün :"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/txt_kalangun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_sinav_adi"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textColor="@color/colorOsym"
                android:textSize="95sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView15"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_below="@+id/txt_kalangun"
                android:text="Başvuru :"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/txt_basvuru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView15"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="@color/colorOsym"
                android:textSize="14sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_kalangun"
                android:layout_centerHorizontal="true"
                android:text="Sınav :"
                android:textStyle="normal|bold" />


            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_below="@+id/txt_kalangun"
                android:text="Sonuç :"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/txt_sonuc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_alignBaseline="@+id/txt_sinav_tarihi"
                android:layout_alignBottom="@+id/txt_sinav_tarihi"
                android:layout_alignParentRight="true"
                android:text=""
                android:textColor="@color/colorOsym"
                android:textSize="14sp"
                android:textStyle="normal|bold" />


            <TextView
                android:id="@+id/txt_sinav_tarihi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView15"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:text=""
                android:textColor="@color/colorOsym"
                android:textSize="14sp"
                android:textStyle="normal|bold" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:elevation="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightGray"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            android:layout_marginLeft="10dp"
            android:id="@+id/txtduyuru"
            android:text="Güncel Duyuru"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/duyuruline"
            android:layout_below="@+id/txtduyuru"
            android:background="@color/colorOsym"/>
    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_boy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:descendantFocusability="blocksDescendants">


            <TextView
                android:id="@+id/duyuru_tarihi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorOsym"
                android:text=""
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/duyuru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/duyuru_tarihi"
                android:layout_alignLeft="@+id/duyuru_tarihi"
                android:text="Henüz Duyuruları yüklemediniz."/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

